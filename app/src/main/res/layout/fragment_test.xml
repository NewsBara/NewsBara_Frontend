<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_fragment_shadowing">


    <LinearLayout
        android:id="@+id/layoutResultTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/ivResultIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="1dp"
            android:src="@drawable/right___wrong_icon"/>

        <TextView
            android:id="@+id/tvResultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right"
            android:textColor="#5EDEC3"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp"/>

    <TextView
        android:id="@+id/tvResultDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chlorogenic acid is a powerful antioxidant..."
        android:textSize="16sp"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="홈으로"
        android:textColor="#FFFFFF"
        android:backgroundTint="#5EDEC3"/>
</LinearLayout>
