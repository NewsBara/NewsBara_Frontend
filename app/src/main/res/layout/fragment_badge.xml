<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="32dp"
    app:cardElevation="0dp"
    android:layout_margin="16dp"
    android:background="#EDE7FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#E8E5FA"
        android:paddingTop="45dp">

        <ImageView
            android:id="@+id/imageCurrentLevelBadge"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:src="@drawable/ic_lv2" />

        <TextView
            android:id="@+id/textCurrentLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lv.2"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="#000000" />

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            tools:ignore="MissingClass">

            <com.example.newsbara.CustomCircularProgressView
                android:id="@+id/customCircularProgressView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="24dp" />


            <TextView
                android:id="@+id/tvProgressText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="590 / 600\npoints"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageLevelBefore"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/ic_lv2" />
                <TextView
                    android:id="@+id/textLevelBefore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lv.2"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/imageArrow"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_arrow"
                android:layout_marginHorizontal="19dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageLevelAfter"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/ic_lv3" />
                <TextView
                    android:id="@+id/textLevelAfter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lv.3"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

