<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_fragment_shadowing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/layoutState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ivStateIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/slow_motion_video"/>

        <TextView
            android:id="@+id/tvState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버튼을 누른 후 아래 내용을 말하세요."
            android:textSize="19sp"
            android:textStyle="bold"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tvOriginSentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coffee has been consumed..."
        android:textSize="18sp"
        android:textColor="#000000"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"/>


    <TextView
        android:id="@+id/tvUserSentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사용자가 말한 내용 표시"
        android:textSize="18sp"
        android:textColor="#5EDEC3"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE: 4.5/5"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#FF6B84"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>


    <ImageButton
        android:id="@+id/btnMic"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/mike"
        android:backgroundTint="#7D5FFF"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"/>

    <ImageButton
        android:id="@+id/btnPause"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_pause"
        android:backgroundTint="#7D5FFF"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>


    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:backgroundTint="#7D5FFF"
        android:visibility="gone"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"/>

</LinearLayout>
